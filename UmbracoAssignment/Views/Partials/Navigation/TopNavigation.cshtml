@{
    var root = Model.Root();
    var selection = root.Children.Where(x => x.IsVisible()).ToArray();
}

@if (selection.Length > 0)
{
    <a class="nav-link @(Model.Name==root.Name?"nav-link--active":null)" href="@root.Url">@root.Name</a>

    foreach (var item in selection)
    {
            <a class="nav-link @(item.IsAncestorOrSelf(Model)?"nav-link--active":null)" href="@item.Url">@item.Name</a>
    }
}


